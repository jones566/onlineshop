<%- include("sidenav"); -%> <%- include("topheader"); -%>

<!-- End Navbar -->
<div class="content">
  <div class="container-fluid">
    <form
      action=""
      method="POST"
      type="form"
      name="form"
      enctype="multipart/form-data">
      <div class="row">
        <div class="col-md-7">
          <div class="card">
            <div class="card-header card-header-primary">
              <h5 class="title">Add Product</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Product Title</label>
                    <select name="postTitle" id="content" class="form-control">
                      <option id="Ladies-wear">Ladies wear</option>
                      <option id="Men's-wear">Men's wear</option>
                    </select>
                    <label>Product Stock</label>
                    <select name="stockTitle" id="stock" class="form-control">
                      <option id="IN-STOCK">IN STOCK</option>
                      <option id="OUT-OF-STOCK">OUT OF STOCK</option>
                    </select>
                    <label>Product State</label>
                    <select name="stateTitle" id="stock" class="form-control">
                      <option id="New">New</option>
                      <option id="Old">Old</option>
                    </select>
                    <!--<input
                      type="text"
                      id="product_name"
                      required
                      name="postTitle"
                      class="form-control" />-->
                  </div>
                </div>
                <div class="col-md-4">
                  <div class="">
                    <label for="">Add Image</label>
                    <input
                      type="file"
                      name="image"
                      class="btn btn-fill btn-success"
                      id="picture" >
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Description</label>
                    <textarea
                      rows="4"
                      cols="80"
                      id="details"
                      required
                      name="announcement1"
                      class="form-control"></textarea>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label>Pricing</label>
                    <input
                      type="text"
                      id="price"
                      name="announcement"
                      required
                      class="form-control" />
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label>Old price</label>
                    <input
                      type="text"
                      id="old_price"
                      name="oldprice"
                      class="form-control" />
                  </div>
                </div>

                <label>Popularity</label>
                    <select name="popularity" id="stock" class="form-control">
                      <option id="Popular">Top Selling</option>
                      <option id="none"></option>
                    </select>

                <div class="col-md-12">
                  <div class="form-group">
                    <label>Product Name</label>
                    <input
                      type="text"
                      id="price"
                      name="name"
                      required
                      class="form-control" />
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-group">
                    <label>Discount</label>
                    <input
                      type="text"
                      id="price"
                      name="discountTitle"
                      class="form-control" />
                  </div>
                </div>

              </div>
            </div>
          </div>
        </div>
        <div class="col-md-5">
          <div class="card">
            <div class="card-header card-header-primary">
              <h5 class="title">Categories</h5>
            </div>
            <div class="card-body">
              <div class="row">
                <div class="col-md-12">
                  <div class="form-group">
                    <label>Product Category</label>
                    <select name="postBody" id="content" class="form-control">
                      <option id="sunglasses">Sunglasses</option>
                      <option id="footwear">footwear</option>
                      <option id="dress">dress</option>
                      <option id="bags">bags</option>
                      <option id="watches">watches</option>
                      <option id="mendress">mendress</option>
                      <option id="menwatches">menwatches</option>
                      <option id="menfootwear">menfootwear</option>
                    </select>
                    <!--<input name="postBody" id="content" class="form-control" />j-->
                  </div>
                </div>
              </div>
            </div>
            <div class="card-footer">
              <button
                type="submit"
                id="btn_save"
                name="btn_save"
                required
                class="btn btn-fill btn-primary">
                Update Product
              </button>
            </div>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
<%- include("footer"); -%>
